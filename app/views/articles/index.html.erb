<script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="http://code.jquery.com/ui/1.11.1/jquery-ui.min.js"></script>
<link rel="stylesheet" href="https://code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css" />

<h1>Listing Articles</h1>
<%= link_to 'New article', new_article_path %>

<h3><button id="opener">open the dialog</button></h3>
<div id="info_dialog" title="Info" hidden="hidden">You can add, edit and destroy new articles at this page.</div>

<div id="articles">
  <% @articles.each do |article| %>
      <h1><%= link_to article.title, article_path(article) %></h1>
      <%= truncate article.text, length: 1000 %>
      <h3> Tags: <%= article.tags_list %></h3>
      <h3><%= link_to "Edit Article", edit_article_path(article) %>
      <%= link_to "Destroy Article", article_path(article),
                     method: :delete,
                     data: { confirm: 'Are you sure?' } %></h3>
  <% end %>
</div>