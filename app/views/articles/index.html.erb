<h1>Listing Articles</h1>
<%= link_to 'New article', new_article_path %>

<div id="articles">
  <% @articles.each do |article| %>
      <h1><%= link_to article.title, article_path(article) %></h1>
      <%= truncate article.text, length: 1000 %>
      <h3> Tags: <%= article.tags_list %></h3>
      <h3><%= link_to "Edit Article", edit_article_path(article) %>
      <%= link_to "Destroy Article", article_path(article),
                     method: :delete,
                     data: { confirm: 'Are you sure?' } %></h3>
  <% end %>
</div>